<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rl_content"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/left_right_top_white_10"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/close"/>

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <ImageView
                android:id="@+id/img0"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginLeft="14dp"
                android:src="@mipmap/qrcode"/>

            <ImageView
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_marginLeft="14dp"
                android:background="@mipmap/corner_back"/>

            <TextView
                android:id="@+id/tv00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img0"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img0"
                android:maxLines="2"
                android:text="蒙牛雪糕"
                android:ellipsize="end"
                android:textColor="@color/text_323232"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv00"
                android:layout_below="@id/tv00"
                android:text="蒙牛雪糕"
                android:textColor="@color/text_8C8C8C"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv00"
                android:layout_below="@id/tv01"
                android:layout_marginTop="3dp"
                android:text="¥111"
                android:textColor="@color/text_F43000"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignTop="@id/tv02"
                android:layout_toRightOf="@id/tv02"
                android:maxLines="1"
                android:text="¥49.9"
                android:textColor="@color/text_8C8C8C"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv00"
                android:layout_below="@id/tv02"
                android:textColor="@color/text_B0B0B0"
                android:text="库存：0"
                android:textSize="12sp"/>
        </RelativeLayout>


        <View
            android:id="@+id/iv_close"
            android:layout_width="60dp"
            android:layout_alignParentRight="true"
            android:layout_height="60dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="规格"
            android:textColor="@color/text_646464"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dp"
            android:text="100g/支     10支/盒     10盒/箱"
            android:textColor="@color/text_8C8C8C"
            android:textSize="12sp"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/text_F1F1F1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/text_F1F1F1"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="256dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="包装"
                android:textColor="@color/text_646464"
                android:textSize="13sp"/>

            <com.lollipop.white.view.FlowTagLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_F1F1F1"/>

            <TextView
                android:id="@+id/text0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="规格"
                android:textColor="@color/text_646464"
                android:textSize="13sp"
                android:visibility="gone"/>

            <com.lollipop.white.view.FlowTagLayout
                android:id="@+id/layout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <View
                android:id="@+id/view0"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_F1F1F1"
                android:visibility="gone"/>


            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="规格"
                android:textColor="@color/text_646464"
                android:textSize="13sp"
                android:visibility="gone"/>

            <com.lollipop.white.view.FlowTagLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_F1F1F1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="规格"
                android:textColor="@color/text_646464"
                android:textSize="13sp"
                android:visibility="gone"/>

            <com.lollipop.white.view.FlowTagLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_F1F1F1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="规格"
                android:textColor="@color/text_646464"
                android:textSize="13sp"
                android:visibility="gone"/>

            <com.lollipop.white.view.FlowTagLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/text_F1F1F1"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:gravity="center_vertical"
                    android:text="选择数量"
                    android:textColor="@color/text_323232"/>

                <com.lollipop.white.view.GoodsNumEditLayout
                    android:id="@+id/view"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_F1F1F1"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="@drawable/c_title_click"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_corner_top_10"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="地址选择"
        android:textColor="@color/text_323232"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        android:src="@mipmap/close" />


    <RelativeLayout
        android:id="@+id/view0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp">

        <View
            android:id="@+id/line0"
            android:layout_width="1.3dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:background="@color/text_FF2801" />

        <View
            android:id="@+id/line1"
            android:layout_width="1.3dp"
            android:layout_height="27dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="47dp"
            android:visibility="gone"
            android:background="@color/text_FF2801" />

        <View
            android:id="@+id/point0"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:background="@drawable/radius_red_5" />

        <View
            android:id="@+id/point1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="37dp"
            android:visibility="gone"
            android:background="@drawable/radius_red_hollow_5" />


        <View
            android:id="@+id/point2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="73dp"
            android:visibility="gone"
            android:background="@drawable/radius_red_hollow_5" />

        <TextView
            android:id="@+id/tv00"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginLeft="50dp"
            android:text="请选择省份/地区"
            android:textColor="@color/text_FF2801"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignLeft="@id/tv00"
            android:layout_below="@id/tv00"
            android:text="请选择城市"
            android:textColor="@color/text_FF2801"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignLeft="@id/tv00"
            android:layout_below="@id/tv01"
            android:text="请选择区/县"
            android:textColor="@color/text_FF2801"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view0"
        android:layout_marginTop="5dp"
        android:background="@color/text_F1F1F1"
        android:divider="@null" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="50dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:layout_height="50dp" />
</RelativeLayout>
